{
  "name": "pong",
  "version": "1.0.0",
  "description": "Pong game made in Phaser 3",
  "main": "src/game.ts",
  "scripts": {
    "start": "webpack serve --mode development --entry ./src/game.ts",
    "build": "webpack --mode production --entry ./src/game.ts --output-path ./dist",
    "dev": "webpack --mode development --entry ./src/game.ts --output-path ./dist",
    "deploy": "webpack --mode production --entry ./src/game.ts --output-path ./dist && gh-pages -d dist"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^6.3.1",
    "css-loader": "^5.0.1",
    "gh-pages": "^3.1.0",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^4.5.0",
    "mini-css-extract-plugin": "^1.3.1",
    "ts-loader": "^8.0.11",
    "tslint": "^6.1.3",
    "typescript": "^4.1.2",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "phaser": "^3.24.1"
  }
}
